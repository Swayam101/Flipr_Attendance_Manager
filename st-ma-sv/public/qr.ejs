<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic QR Code</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-image: url('./glass5.jpg');
      /* Replace 'glass-background.jpg' with your actual image file */
      background-size: cover;
      font-family: Arial, sans-serif;
      /* Change font family as needed */
    }

    #loadingContainer {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 9999;
      /* Ensure it's on top of other content */
      display: none;
    }

    .lds-ripple {
      display: inline-block;
      position: relative;
      width: 64px;
      height: 64px;
    }

    .lds-ripple div {
      position: absolute;
      border: 4px solid #fff;
      opacity: 1;
      border-radius: 50%;
      animation: lds-ripple 1s cubic-bezier(0, 0.2, 0.8, 1) infinite;
    }

    .lds-ripple div:nth-child(2) {
      animation-delay: -0.5s;
    }

    @keyframes lds-ripple {
      0% {
        top: 28px;
        left: 28px;
        width: 0;
        height: 0;
        opacity: 1;
      }

      100% {
        top: 0px;
        left: 0px;
        width: 56px;
        height: 56px;
        opacity: 0;
      }
    }

    #qrCodeContainer {
      max-width: 400px;
      /* Set a maximum width for the QR code container */
      margin: auto;
      /* Center the container */
      display: none;
    }

    #qrCodeContainer img {
      width: 100%;
      /* Make the QR code image fill the container */
      height: auto;
      /* Maintain aspect ratio */
    }

    .approval-box {
      width: 350px;
      height: 200px;
      margin: 50px auto;
      box-shadow: rgba(0, 66, 121, 0.3) 0px 19px 38px, rgba(0, 0, 0, 0.22) 0px 15px 12px;
      display: flex;
      text-align: center;
      align-items: center;
      padding: 10px;
      background-color: rgba(0, 66, 121, 0.3);
      border-radius: 10px;
    }

    h1 {
      color: white;
    }
  </style>
</head>

<body>
  <div class='approval-box qrcode'>
    <h1>Attendance Qr Code</h1>
    <div id="loadingContainer">
      <div class="lds-ripple">
        <div></div>
        <div></div>
      </div>
    </div>
    <div id="qrCodeContainer">
      <img id="qrCodeImage" src="https://media.tenor.com/G7LfW0O5qb8AAAAi/loading-gif.gif" alt="QR Code Image">
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const socket = io();
      const qrCodeImage = document.getElementById('qrCodeImage');
      const loadingContainer = document.getElementById('loadingContainer');
      const qrCodeContainer = document.getElementById('qrCodeContainer');

      // Initially hide QR code and show loading animation
      qrCodeContainer.style.display = 'none';
      loadingContainer.style.display = 'block';

      socket.on('hashUpdate', (data) => {
        // Show QR code and hide loading animation when QR code is generated
        qrCodeImage.src = data.qrImageUrl;
        qrCodeContainer.style.display = 'block';
        loadingContainer.style.display = 'none';
      });
    });
  </script>
</body>

</html>
