<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background: linear-gradient(180deg, #74ebd5, #ACB6E5);
    }

    h1 {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size: 2em;
      color: #2c3e50;
      margin-bottom: 20px;
    }

    img {
      width: 300px; /* Adjust the size as needed */
      height: 300px; /* Adjust the size as needed */
      border-radius: 15px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(10px);
      margin-top: 20px;
    }

    /* Optional: Add glassmorphism effect to the title */
    h1 {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(10px);
      padding: 10px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Optional: Add some margin to the body */
    body {
      margin: 20px;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>
  <img src="<%= qrCodeDataUrl %>" alt="QR Code">

  <script src="https://cdn.socket.io/4.1.3/socket.io.min.js"></script>
  <script>
    const socket = io();

    
    socket.on('hashUpdate', (data) => {
    
      const imgElement = document.querySelector('img');
      imgElement.src = data.qrCodeDataUrl;
    });

    // Clean up on page unload
    window.addEventListener('unload', () => {
      socket.disconnect();
    });
  </script>
</body>
</html>
